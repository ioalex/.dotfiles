# XDG Base Directory Specification
# http://standards.freedesktop.org/basedir-spec/basedir-spec-latest.html
export XDG_DATA_HOME=${XDG_DATA_HOME:="$HOME/.local/share"}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:="$HOME/.cache"}
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:="$HOME/.config"}

export NVM_DIR="$HOME/.nvm"
mkdir -p "$NVM_DIR"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wget/wgetrc"
export GOPATH="${XDG_DATA_HOME:-$HOME/.local/share}/go"
mkdir -p "GOPATH"

# Set ZSH_CACHE_DIR to the path where cache files should be created
# This is needed to ensure the zsh_reload plugin works properly <github.com/ohmyzsh/ohmyzsh/blob/master/plugins/zsh_reload/zsh_reload.plugin.zsh>
if [[ -z "$ZSH_CACHE_DIR" ]]; then
  ZSH_CACHE_DIR="$XDG_CACHE_HOME/zsh"
fi
mkdir -p "$ZSH_CACHE_DIR"

export ZSH_COMPLETE="$ZSH_CACHE_DIR/zcompcache"
mkdir -p "$ZSH_COMPLETE"

export ZSH_DUMP="$ZSH_CACHE_DIR/zcompdump"
mkdir -p "$ZSH_DUMP"

export HISTORY_DIR="$XDG_CACHE_HOME/history"
mkdir -p "$HISTORY_DIR"
export ZSH_HISTORY="$HISTORY_DIR/.zsh_history"

# Set language environment
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Path to zshrc configuration
export ZDOTDIR=$XDG_CONFIG_HOME/zsh
mkdir -p "$ZDOTDIR"
export ZSHCONFIG="$ZDOTDIR/zsh"
export ZSH_MISC="$ZSHCONFIG/config/misc"
export ZSH_FUNCTIONS="$ZSHCONFIG/config/functions"
export ZSH_COMPLETIONS="$ZSH_MISC/completions"
export ZSHENV="$HOME/.zshenv"

# Path to bash configuration
export BASHDIR=$XDG_CONFIG_HOME/bash
mkdir -p "$BASHDIR"

# Tmux Configuration
export TMUXDIR=$XDG_CONFIG_HOME/tmux
mkdir -p "$TMUXDIR"

# Set Antibody Home Directory
export ANTIBODY_HOME=$HOME/Library/antibody
export ANTIBODY_PLUGINS=$ZDOTDIR/.zsh_plugins.sh
export ANTIBODY_PLUGINS_TXT=$ZDOTDIR/.zsh_plugins.txt

# Ripgrep Configuration
export RIPGREP_DIR="$XDG_CONFIG_HOME/ripgrep"
mkdir -p "$RIPGREP_DIR"
export RIPGREP_CONFIG_PATH="$RIPGREP_DIR/ripgreprc"

# Set Editor Defaults
export VEDITOR="code"
export EDITOR="nvim"

# Useful Exports
export ZSHRC=$ZDOTDIR/.zshrc
export NVIM_PATH=$XDG_CONFIG_HOME/nvim
export TMUX_CONFIG=$TMUXDIR/tmux.conf
export DESKTOP=$HOME/Desktop
export PROJECTS=$HOME/Projects
export WEBDEV=$HOME/Projects/Web-Development
export DOTFILES=$HOME/.dotfiles
